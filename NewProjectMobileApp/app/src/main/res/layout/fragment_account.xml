<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_grey"
            android:drawableLeft="@drawable/arrow_back1x"
            android:drawableTint="@color/white"
            android:drawablePadding="-20dp"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false">
        </Button>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Account"
            android:textColor="@color/white"
            android:textSize="14sp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_update_account_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_in_account_info"
            android:drawableLeft="@drawable/user_circal2x"
            android:drawableRight="@drawable/arrow_right2x"
            android:drawableTint="@color/white"
            android:textAllCaps="false"
            android:text="Update account infomation"
            android:textColor="@color/white"
            android:textSize="14sp">
        </Button>

        <Button
            android:id="@+id/button_sign_out"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_in_account_info"
            android:drawableLeft="@drawable/login2x"
            android:drawableRight="@drawable/arrow_right2x"
            android:drawableTint="@color/white"
            android:textAllCaps="false"
            android:text="SIGN OUT"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp">
        </Button>

    </LinearLayout>

</LinearLayout>